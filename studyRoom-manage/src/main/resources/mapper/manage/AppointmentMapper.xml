<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lz.manage.mapper.AppointmentMapper">

    <resultMap type="Appointment" id="AppointmentResult">
        <result property="id"    column="id"    />
        <result property="roomId"    column="room_id"    />
        <result property="seatId"    column="seat_id"    />
        <result property="appointmentTime"    column="appointment_time"    />
        <result property="status"    column="status"    />
        <result property="remark"    column="remark"    />
        <result property="userId"    column="user_id"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectAppointmentVo">
        select id, room_id, seat_id, appointment_time, status, remark, user_id, create_time, update_time from tb_appointment
    </sql>

    <select id="selectAppointmentList" parameterType="Appointment" resultMap="AppointmentResult">
        <include refid="selectAppointmentVo"/>
        <where>
            <if test="id != null ">and id = #{id}</if>
            <if test="params.beginAppointmentTime != null and params.beginAppointmentTime != '' and params.endAppointmentTime != null and params.endAppointmentTime != ''">
                and DATE_FORMAT(appointment_time, '%Y-%m-%d') between #{params.beginAppointmentTime} and
                #{params.endAppointmentTime}
            </if>
            <if test="status != null  and status != ''">and status = #{status}</if>
            <if test="userId != null ">and user_id = #{userId}</if>
            <if test="params.beginCreateTime != null and params.beginCreateTime != '' and params.endCreateTime != null and params.endCreateTime != ''">
                and DATE_FORMAT(create_time, '%Y-%m-%d') between #{params.beginCreateTime} and #{params.endCreateTime}
            </if>
            <!-- 数据范围过滤 -->
            ${params.dataScope}
        </where>
        order by create_time desc
    </select>

    <select id="selectAppointmentById" parameterType="Long" resultMap="AppointmentResult">
        <include refid="selectAppointmentVo"/>
        where id = #{id}
    </select>

    <insert id="insertAppointment" parameterType="Appointment" useGeneratedKeys="true" keyProperty="id">
        insert into tb_appointment
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="roomId != null">room_id,</if>
            <if test="seatId != null">seat_id,</if>
            <if test="appointmentTime != null">appointment_time,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="remark != null">remark,</if>
            <if test="userId != null">user_id,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="roomId != null">#{roomId},</if>
            <if test="seatId != null">#{seatId},</if>
            <if test="appointmentTime != null">#{appointmentTime},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="remark != null">#{remark},</if>
            <if test="userId != null">#{userId},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateAppointment" parameterType="Appointment">
        update tb_appointment
        <trim prefix="SET" suffixOverrides=",">
            <if test="roomId != null">room_id = #{roomId},</if>
            <if test="seatId != null">seat_id = #{seatId},</if>
            <if test="appointmentTime != null">appointment_time = #{appointmentTime},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="remark != null">remark = #{remark},</if>
            <if test="userId != null">user_id = #{userId},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteAppointmentById" parameterType="Long">
        delete from tb_appointment where id = #{id}
    </delete>

    <delete id="deleteAppointmentByIds" parameterType="String">
        delete from tb_appointment where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>
